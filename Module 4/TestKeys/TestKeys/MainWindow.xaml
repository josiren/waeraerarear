<Window x:Class="TestKeys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestKeys"
        mc:Ignorable="d"
        Title="Валидация данных" Height="250" Width="700">
    <Grid>
        <StackPanel>
            <Grid Margin="35 35 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button x:Name="GetDataBtn" Grid.Column="0" VerticalAlignment="Center" HorizontalContentAlignment="Center"
            Padding="10" Margin="0" Content="Получить данные" Click="GetDataBtn_Click"/>
                <Label x:Name="EmailBox" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30"/>
            </Grid>

            <Grid Margin="35 35 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button x:Name="PostResultBtn" Grid.Column="0" VerticalAlignment="Center" HorizontalContentAlignment="Center"
            Padding="10" Margin="0" Content="Отправить результат теста" Click="PostResultBtn_Click"/>
                <Label x:Name="ResponseBox" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel> 
    </Grid>
</Window>
