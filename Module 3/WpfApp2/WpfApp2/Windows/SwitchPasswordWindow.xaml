<Window x:Class="WpfApp2.Windows.SwitchPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Windows"
        mc:Ignorable="d"
        Title="Смена пароля" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Смена пароля" FontSize="20" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

            <Label Content="Текущий пароль:"/>
            <PasswordBox x:Name="CurrentPasswordBox" Margin="10" Width="300"/>

            <Label Content="Новый пароль:"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="10" Width="300"/>

            <Label Content="Подтверждение нового пароля:"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="10" Width="300"/>

            <Button x:Name="ChangePasswordBtn" Content="Изменить пароль" Width="150" Click="ChangePasswordBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
