<Page x:Class="WpfApp2.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница входа">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <Label Content="Логин:"/>
            <TextBox Name="UsernameTextBox" Width="250" Margin="0,0,0,10"/>

            <Label Content="Пароль:"/>
            <PasswordBox Name="PasswordBox" Width="250" Margin="0,0,0,20"/>

            <Button Name="LoginBtn" Width="250" Content="Войти" Click="LoginBtn_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>
